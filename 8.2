/* ===============================================================
   Part B: Display Employee Records with JDBC and Servlet Integration
   ===============================================================
   Objective:
   To create a Java Servlet that integrates with a database using JDBC 
   and displays a list of employees. The servlet also includes a search 
   feature to fetch employee details by ID.
   ===============================================================
*/

import java.io.*;
import java.sql.*;
import javax.servlet.*;
import javax.servlet.http.*;

public class EmployeeServlet extends HttpServlet {

    // ---------------- DATABASE CONFIGURATION ----------------
    String url = "jdbc:mysql://localhost:3306/employee_db";  // Database URL
    String user = "root";                                    // MySQL username
    String password = "root";                                // MySQL password

    // -------------------- doGet() METHOD --------------------
    // This method displays all employees and a search form
    public void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        out.println("<html>");
        out.println("<head><title>Employee Records</title></head>");
        out.println("<body style='font-family:Arial; text-align:center;'>");
        out.println("<h2>Employee Records</h2>");

        // Search form
        out.println("<form method='post' action='EmployeeServlet'>");
        out.println("Search Employee by ID: <input type='text' name='empid' required>");
        out.println("<input type='submit' value='Search'>");
        out.println("</form>");
        out.println("<hr>");

        // Fetch and display all employee records
        try {
            Class.forName("com.mysql.cj.jdbc.Driver"); // Load MySQL JDBC Driver
            Connection con = DriverManager.getConnection(url, user, password);
            Statement st = con.createStatement();
            ResultSet rs = st.executeQuery("SELECT * FROM Employee");

            out.println("<table border='1' cellspacing='0' cellpadding='10' align='center'>");
            out.println("<tr style='background-color:#f2f2f2;'><th>EmpID</th><th>Name</th><th>Salary</th></tr>");

            while (rs.next()) {
                out.println("<tr>");
                out.println("<td>" + rs.getInt("EmpID") + "</td>");
                out.println("<td>" + rs.getString("Name") + "</td>");
                out.println("<td>" + rs.getDouble("Salary") + "</td>");
                out.println("</tr>");
            }

            out.println("</table>");
            con.close();

        } catch (Exception e) {
            out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
        }

        out.println("</body>");
        out.println("</html>");
    }

    // -------------------- doPost() METHOD --------------------
    // This method handles the search form and displays the matched employee
    public void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();
        String empid = request.getParameter("empid");

        out.println("<html>");
        out.println("<head><title>Employee Search Result</title></head>");
        out.println("<body style='font-family:Arial; text-align:center;'>");
        out.println("<h2>Employee Search Result</h2>");
        out.println("<a href='EmployeeServlet'>Back to All Records</a><br><br>");

        try {
            Class.forName("com.mysql.cj.jdbc.Driver");
            Connection con = DriverManager.getConnection(url, user, password);

            String query = "SELECT * FROM Employee WHERE EmpID = ?";
            PreparedStatement ps = con.prepareStatement(query);
            ps.setString(1, empid);
            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
                out.println("<table border='1' cellspacing='0' cellpadding='10' align='center'>");
                out.println("<tr style='background-color:#f2f2f2;'><th>EmpID</th><th>Name</th><th>Salary</th></tr>");
                out.println("<tr>");
                out.println("<td>" + rs.getInt("EmpID") + "</td>");
                out.println("<td>" + rs.getString("Name") + "</td>");
                out.println("<td>" + rs.getDouble("Salary") + "</td>");
                out.println("</tr>");
                out.println("</table>");
            } else {
                out.println("<p style='color:red;'>No employee found with ID: " + empid + "</p>");
            }

            con.close();

        } catch (Exception e) {
            out.println("<p style='color:red;'>Error: " + e.getMessage() + "</p>");
        }

        out.println("</body>");
        out.println("</html>");
    }
}

